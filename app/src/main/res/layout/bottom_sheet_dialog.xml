<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlBottomSheet"
    android:background="@color/blue_shade_2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Data"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/tvNamaData"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:textSize="15dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivData"
        android:layout_below="@id/tvNamaData"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeskipsi"
        android:textColor="@color/white"
        android:text="Deskripsi"
        android:layout_toRightOf="@id/ivData"
        android:layout_below="@id/tvNamaData"
        android:textSize="15dp"
        android:padding="3dp"
        android:layout_margin="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTarget"
        android:textColor="@color/white"
        android:text="Target"
        android:layout_toRightOf="@id/ivData"
        android:layout_below="@id/tvDeskipsi"
        android:textSize="15dp"
        android:padding="3dp"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTarget"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/ivData"
        android:padding="3dp"
        android:text="Harga"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/ivSuka"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvTarget"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/tvHarga"
        android:src="@drawable/ic_suka" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/tvHarga"
        tools:ignore="NotSibling">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Ubah Data"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/btUbah"
            tools:ignore="Suspicious0dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Lihat Detail"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/btLihatDetail"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>

</RelativeLayout>