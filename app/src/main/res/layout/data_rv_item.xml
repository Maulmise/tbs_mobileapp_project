<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_shade_2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ivData"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Data"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@id/ivData"
            android:layout_toLeftOf="@id/tvHarga"
            android:layout_margin="3dp"
            android:singleLine="true"
            android:padding="4dp"
            android:textSize="15dp"
            android:id="@+id/tvNamaData"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textSize="15dp"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:singleLine="true"
            android:layout_below="@id/ivData"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tvHarga"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/llSuka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHarga"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/ic_suka" />

            <TextView
                android:id="@+id/tvDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="sukai"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>